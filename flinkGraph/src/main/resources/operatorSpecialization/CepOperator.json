{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://dzpx.com/detection",
  "title": "CepOperator",
  "description": "CepOperator parameter",
  "minItems": 1,
  "type": "array",
        "items": {
          "required": [
            "partition",
            "orderBy",
            "outPutMode",
            "patterns",
            "skipStrategy",
            "columns",
            "defines"
          ],
          "properties": {
            "partition": {
              "type": "string",
              "minLength": 1,
              "description": "field for partition"
            },
            "orderBy": {
              "type": "string",
              "minLength": 1,
              "description": "field for order"
            },
            "outPutMode": {
              "type":"string",
              "enum":["ONE","ALL"],
              "description": "specify ths output mode after successful matching"
            },
            "timeSpan":{
              "type":"integer",
			  "default":10,
			  "minimum":0,
              "description": "specify ths length of time"
            },
            "timeUnit":{
              "type":"string",
              "enum":["SECOND","MINUTE","DAY","MONTH","YEAR"],
              "description": "set time unit"
            },
"patterns": {
    "type": "array",
    "minItems": 1,
    "title": "patterns",
    "items": {
        "type": "object",
        "title": "patterns",
        "description": "event matching rule",
        "required": [
            "variable",
            "quantifier"
        ],
        "properties": {
            "variable": {
                "type": "string",
                "minLength": 1,
                "title": "variable"
            },
            "quantifier": {
                "type": "string",
                "minLength": 1,
                "title": "quantifier",
                "description": "pattern quantifier's quantifier, * + ? {n} {n,} {n,m} {,m}"
            }
        }
    }
},
"skipStrategy": {
        "type": "object",
        "title": "skipStrategy",
        "description": "jump rule after success",
        "required": [
            "strategy",
            "variable"
        ],
        "properties": {
            "strategy": {
                "type": "string",
                "enum":["LAST_ROW","NEXT_ROW","LAST","FIRST"],
                "title": "strategy"
            },
            "variable": {
                "type": "string",
                "minLength": 1,
                "title": "variable"
            }
        }
},
"columns": {
    "type": "array",
    "minItems": 1,
    "title": "columns",
    "items": {
        "type": "object",
        "title": "columns",
        "description": "output field",
        "required": [
            "functionName",
            "name",
            "parameters",
			"flag"
        ],
        "properties": {
            "functionName": {
                "type": "string",
                "minLength": 1,
                "title": "functionName"
            },
            "name": {
                "type": "string",
                "minLength": 1,
                "title": "outName"
            },
            "parameters": {
                "type": "array",
                "minItems": 1,
                "title": "parameters",
                "items": {
                   "type": "string"
                }
            },
			"flag":{
				"type": "boolean",
				"default": true,
				"title": "checked ?"
			}
        }
    }
},
            "defines": {
                "type": "array",
                "minItems": 1,
                "title": "defines",
                "items": {
                    "type": "object",
                    "title": "Schema",
                    "description": "the specific meaning of the event",
                    "required": [
                        "variable",
                        "condition"
                    ],
                    "properties": {
                        "variable": {
                            "type": "string",
                            "minLength": 1,
                            "title": "variable"
                        },
                        "condition": {
                            "type": "string",
                            "minLength": 1,
                            "title": "condition"
                        }
                    }
                }
            }
          }
        }
}