{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "http://example.com/example.json",
    "type": "array",
    "title": "CommSelectFunctionOperator",
	"minItems": 1,
    "items": {
        "type": "object",
        "title": "configuration",
        "required": [
			"where",
			"columns"
        ],
        "properties": {
            "where": {
                "type": "string",
				"minLength": 1
            },
            "columns": {
				"type": "array",
				"minItems": 1,
				"items": {
					"type": "object",
					"title": "columns",
					"description": "output field",
					"required": [
						"functionName",
						"name",
						"parameters",
						"flag"
					],
					"properties": {
						"functionName": {
							"type": "string",
							"minLength": 1
						},
						"name": {
							"type": "string",
							"minLength": 1
						},
						"parameters": {
							"type": "array",
							"minItems": 1,
							"items": {
							   "type": "string",
							   "minLength": 1
							}
						},
						"flag":{
							"type": "boolean",
							"default": true,
							"title": "checked ?"
						}
					}
				}
            }
        }
    }
}